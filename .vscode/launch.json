    "version": "0.2.0",
    "configurations": [

        {
            "name": "Py: Django runserver",
            "type": "debugpy",
            "request": "launch",
            "program": "manage.py",
            "console": "integratedTerminal",
            "args": ["runserver", "--noreload"],
            "cwd": "${workspaceFolder}"
        },
        {
            // Note that reloading will trigger the debugger
            "name": "Py: Django runserver (auto-reloading)",
            "type": "debugpy",
            "request": "launch",
            "program": "manage.py",
            "console": "integratedTerminal",
            "args": ["runserver"],
            "cwd": "${workspaceFolder}"
        },
        {
            // Note that reloading will trigger the debugger
            "name": "Py: Custom Script",
            "type": "debugpy",
            "request": "launch",
            "program": "misc${pathSeparator}standalone_script.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"}
        }
    ]
}